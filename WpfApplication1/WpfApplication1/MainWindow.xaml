<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="195" Margin="190,50,0,0" VerticalAlignment="Top" Width="260">
            <Path Stroke="blue" StrokeThickness="2" Canvas.Left="0" Canvas.Top="0">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure x:Name="ProfilePath" IsClosed="False" IsFilled="False">

                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

    </Grid>
</Window>
