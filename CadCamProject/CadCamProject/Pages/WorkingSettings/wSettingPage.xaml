<UserControl x:Class="CadCamProject.Pages.wSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadCamProject.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White" Margin="0,-10,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="buttonAccept" Content="Accept" Margin="10,0,140,10" Click="buttonAccept_Click" Height="20" VerticalAlignment="Bottom"/>
        <Label x:Name="label" Content="Working Settings" Margin="15,20,0,0" FontSize="24" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="265" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonCancel" Content="Cancel" Margin="0,0,10,10" Click="buttonCancel_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="15,91,0,0" TextWrapping="Wrap" Text="Program Name" VerticalAlignment="Top" Height="16" Width="90"/>
        <TextBox x:Name="textBox" Margin="105,84,15,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" SelectionChanged="DefaultEvent"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="15,176,0,0" TextWrapping="Wrap" Text="Post Processor" VerticalAlignment="Top" Height="16" Width="85"/>
        <ComboBox x:Name="comboBoxDesignPlane" Margin="105,170,15,0" VerticalAlignment="Top" Height="22"/>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="15,271,0,0" TextWrapping="Wrap" Text="Work Coordinate Systems" VerticalAlignment="Top" Height="16" Width="180"/>
        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="15,116,0,0" TextWrapping="Wrap" Text="Local Path" VerticalAlignment="Top" Height="16" Width="90"/>
        <TextBox x:Name="textBox_Copy" Margin="15,137,15,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="buttonBrowserPath" Content="Browse" Margin="180,114,15,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="15,211,0,0" TextWrapping="Wrap" Text="Tool Magazine" VerticalAlignment="Top" Height="16" Width="90"/>
        <TextBox x:Name="textBox_Copy1" Margin="15,232,15,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="buttonBrowserPath_Copy" Content="Browse" Margin="180,267,15,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy2" Margin="15,292,15,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="buttonBrowserPath_Copy1" Content="Browse" Margin="180,207,15,0" VerticalAlignment="Top"/>
        <Frame x:Name="myFrame" Content="" Grid.Column="1" Margin="10,10,10,30" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,0,0,7" TextWrapping="Wrap" Text="Settings Version" Grid.Column="1" Height="16" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlockVersion" HorizontalAlignment="Left" Margin="110,0,0,7" TextWrapping="Wrap" Text="%%" Grid.Column="1" Height="16" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
