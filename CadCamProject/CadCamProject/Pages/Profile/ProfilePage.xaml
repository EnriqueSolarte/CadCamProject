<UserControl x:Class="CadCamProject.Pages.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadCamProject.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="1280">

    <Grid Background="White" Margin="0,0,0,0" MouseMove="Grid_MouseMove">
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="295"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Profile Settings" Margin="15,20,0,0" FontSize="24" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="265" Grid.RowSpan="2"/>
        <Button x:Name="buttonAccept" Content="Accept" Margin="26,0,0,0" Click="buttonAccept_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Grid.Row="1"/>
        <Button x:Name="buttonCancel" Content="Cancel" Margin="151,0,24,0" Click="buttonCancel_Click" Height="20" VerticalAlignment="Bottom" Grid.Row="1"/>
        <DockPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
            <StatusBar x:Name="statusBar" DockPanel.Dock="Bottom" Height="39" Background="White">
                <Label x:Name="textVersion" Content="Version:"></Label>
                <Label x:Name="LabelVersion"></Label>
                <Label x:Name="Labelblank" Content="                      " HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
                <Label x:Name="LabelFile" Content="*opt" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
                <Label x:Name="LabelStatus" HorizontalAlignment="Center"></Label>
                <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Width="147" Height="15" Visibility="Hidden"/>
            </StatusBar>
        </DockPanel>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="25,5,0,0" TextWrapping="Wrap" Text="Profile Name:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="71"/>
        <TextBox x:Name="textBoxProfileName" Height="23" Margin="25,21,25,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxWorkOffsets" HorizontalAlignment="Left" Margin="25,65,0,0" VerticalAlignment="Top" Width="245" Grid.Row="1" Height="22"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="25,49,0,0" TextWrapping="Wrap" Text="Work Offset:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="66"/>
        <ComboBox x:Name="comboBoxWorkingPlane" HorizontalAlignment="Left" Margin="115,92,0,0" VerticalAlignment="Top" Width="155" Grid.Row="1" Height="22"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="25,92,0,0" TextWrapping="Wrap" Text="Working Plane:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="85"/>
        <Border BorderThickness="1" BorderBrush="Black"  Grid.Row="1" Grid.Column="1" />
        <Canvas Grid.Column="1" Grid.Row="1" >
            <Canvas.Background>
                <DrawingBrush TileMode="Tile" Viewport="0,0,10,10" 
                                     ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,50,50"/>
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Pen>
                                <Pen Brush="Gray" Thickness="1"/>
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Canvas.Background>
            <ListView x:Name="listViewGeometries" Height="600" Canvas.Left="10" Canvas.Top="10" Width="130">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Canvas>
        <Button x:Name="buttonDelete" Content="Delete" Margin="10,0,790,10" Grid.Row="1" Grid.Column="1" Height="20" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="25,146,0,0" TextWrapping="Wrap" Text="Profile Definition:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="150"/>
        <TextBox x:Name="textBoxInitialCoord1" HorizontalAlignment="Left" Height="23" Margin="63,206,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="textBoxInitialCoord2" HorizontalAlignment="Left" Height="23" Margin="63,234,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <TextBlock x:Name="textBlock5_Copy1" HorizontalAlignment="Left" Margin="25,185,0,0" TextWrapping="Wrap" Text="Initial Point:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="75"/>
        <Label x:Name="labelInitialCoord1" Content="Xin" HorizontalAlignment="Left" Margin="25,202,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="27"/>
        <Label x:Name="labelInitialCoord2" Content="Zin" HorizontalAlignment="Left" Margin="25,231,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="27"/>
        <TextBlock x:Name="textBlock5_Copy" HorizontalAlignment="Left" Margin="25,305,0,0" TextWrapping="Wrap" Text="Final Position:" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="75"/>
        <TextBox x:Name="textBoxFinalCoord1" HorizontalAlignment="Left" Height="23" Margin="63,326,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="textBoxFinalCoord2" HorizontalAlignment="Left" Height="23" Margin="63,354,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <Label x:Name="labelInitialCoord1_Copy" Content="Xen" HorizontalAlignment="Left" Margin="25,322,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="30"/>
        <Label x:Name="labelInitialCoord2_Copy" Content="Zen" HorizontalAlignment="Left" Margin="25,351,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="30"/>
        <TextBox x:Name="textBoxRadius" HorizontalAlignment="Left" Height="23" Margin="63,382,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <Label x:Name="labelInitialCoord2_Copy1" Content="R" HorizontalAlignment="Left" Margin="25,379,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="17"/>
        <TextBox x:Name="textBoxRadiusIpos" HorizontalAlignment="Left" Height="23" Margin="63,410,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="textBoxRadiusKpos" HorizontalAlignment="Left" Height="23" Margin="63,439,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <Label x:Name="labelInitialCoord1_Copy1" Content="I" HorizontalAlignment="Left" Margin="25,407,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="13"/>
        <Label x:Name="labelInitialCoord2_Copy2" Content="K" HorizontalAlignment="Left" Margin="25,436,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="17"/>
        <ComboBox x:Name="comboBoxTransitionNext" HorizontalAlignment="Left" Margin="25,493,0,0" VerticalAlignment="Top" Width="144" Grid.Row="1" Height="22" RenderTransformOrigin="0.516,5.364"/>
        <TextBox x:Name="textBoxValueTransitionParameter" HorizontalAlignment="Left" Height="23" Margin="64,523,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <Label x:Name="labelTransitionParameter" Content="R" HorizontalAlignment="Left" Margin="26,520,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="17"/>
        <Button x:Name="buttonDefineGeometry" Content="Define" Margin="151,0,24,65" Grid.Row="1" Height="20" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="comboBoxRadiusDefinition" HorizontalAlignment="Left" Margin="126,270,0,0" VerticalAlignment="Top" Width="144" Grid.Row="1" Height="22" RenderTransformOrigin="0.516,5.364"/>
        <CheckBox x:Name="checkBoxTransitionNext" Content="Transition to next geometry" HorizontalAlignment="Left" Margin="25,473,0,0" Grid.Row="1" VerticalAlignment="Top" Height="15" Width="166"/>
        <TextBlock x:Name="textBlock5_Copy2" HorizontalAlignment="Left" Margin="26,276,0,0" TextWrapping="Wrap" Text="Radius Definition" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="95"/>
        <RadioButton x:Name="radioButtonAddLine" Content="Add Line" HorizontalAlignment="Left" Margin="134,147,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="radioButtonAddArc" Content="Add Arc" HorizontalAlignment="Left" Margin="134,162,0,0" Grid.Row="1" VerticalAlignment="Top" Checked="radioButtonAddArc_Checked"/>

    </Grid>
</UserControl>
